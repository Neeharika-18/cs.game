import turtle
import time
import random

# Screen setup
wn = turtle.Screen()
wn.title("Snake Game")
wn.bgcolor("black")
wn.setup(width=600, height=600)
wn.tracer(0)

# Snake head
head = turtle.Turtle()
head.shape("square")
head.color("white")
head.penup()
head.goto(0, 0)
head.direction = "stop"

# Food
food = turtle.Turtle()
food.shape("circle")
food.color("red")
food.penup()
food.goto(0, 100)

segments = [] # List to store snake body segments

# Functions for direction changes
def go_up():
    if head.direction != "down":
        head.direction = "up"
# ... similar functions for down, left, right

# Function to move the snake
def move():
    if head.direction == "up":
        y = head.ycor()
        head.sety(y + 20)
    # ... similar logic for other directions

# Keyboard bindings
wn.listen()
wn.onkeypress(go_up, "Up")
# ... bind other arrow keys

# Main game loop
while True:
    wn.update()
    move()

    # Collision with food
    if head.distance(food) < 20:
        x = random.randint(-290, 290)
        y = random.randint(-290, 290)
        food.goto(x, y)

        # Add a new segment
        new_segment = turtle.Turtle()
        new_segment.shape("square")
        new_segment.color("grey")
        new_segment.penup()
        segments.append(new_segment)

    # Move the end segments first in reverse order
    for index in range(len(segments) - 1, 0, -1):
        x = segments[index - 1].xcor()
        y = segments[index - 1].ycor()
        segments[index].goto(x, y)

    # Move segment 0 to where the head is
    if len(segments) > 0:
        x = head.xcor()
        y = head.ycor()
        segments[0].goto(x, y)

    # Collision with wall or self (add game over logic)
    if head.xcor() > 290 or head.xcor() < -290 or head.ycor() > 290 or head.ycor() < -290:
        # Game over logic
        break 

    # Collision with self
    for segment in segments:
        if segment.distance(head) < 20:
            # Game over logic
            break

    time.sleep(0.1) # Control game speed

wn.mainloop() # Keep the window open after game ends (optional)
